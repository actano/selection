{
  "name": "yourchoice",
  "version": "2.1.1",
  "description": "Resembles the selection behavior of popular file managers",
  "license": "MIT",
  "author": "Actano GmbH (https://rplan.com/)",
  "scripts": {
    "test": "jest --coverage --verbose",
    "test:watch": "jest --watch",
    "test-ci": "yarn run lint && jest --coverage && codecov",
    "build": "yarn run build:commonjs && yarn run build:umd",
    "build:commonjs": "babel src --out-dir lib",
    "build:umd": "BABEL_ENV=commonjs webpack src/index.js dist/yourchoice.js",
    "prepublish": "yarn run clean && yarn run build",
    "lint": "eslint \"src/**/*.js\" \"__test__/**/*.js\"",
    "clean": "rimraf lib"
  },
  "main": "lib/index.js",
  "jest": {
    "testEnvironment": "node",
    "coverageDirectory": "./coverage/"
  },
  "repository": {
    "type": "git",
    "url": "git://github.com/actano/yourchoice.git"
  },
  "keywords": [
    "selection",
    "multi",
    "multiselect",
    "range",
    "toggle",
    "shift",
    "iterator",
    "tree"
  ],
  "devDependencies": {
    "babel-cli": "^6.7.7",
    "babel-core": "^6.7.7",
    "babel-jest": "^21.0.2",
    "babel-loader": "^7.0.0",
    "babel-preset-es2015": "^6.6.0",
    "chai": "^4.0.2",
    "codecov": "^3.0.0",
    "eslint": "^4.3.0",
    "eslint-config-actano-base": "^2.1.0",
    "eslint-plugin-import": "^2.7.0",
    "jest-cli": "^21.0.2",
    "rimraf": "^2.5.2",
    "sinon": "^3.2.1",
    "sinon-chai": "^2.13.0",
    "webpack": "^2.6.1"
  },
  "dependencies": {
    "component-emitter": "^1.2.0",
    "lodash": "^4.17.2"
  }
}
