{
  "name": "yourchoice",
  "version": "1.2.0",
  "description": "Resembles the selection behavior of popular file managers",
  "license": "MIT",
  "author": "Actano GmbH (https://rplan.com/)",
  "scripts": {
    "clean": "rimraf lib dist",
    "karma": "./node_modules/karma/bin/karma start",
    "test": "npm run karma",
    "build:commonjs": "babel src --out-dir lib",
    "build:umd": "BABEL_ENV=commonjs webpack src/index.js dist/yourchoice.js",
    "build": "npm run build:commonjs && npm run build:umd",
    "prepublish": "npm run clean && npm run lint && npm run build",
    "lint": "standard \"src/**/*.js\" \"test/**/*.js\" --verbose | snazzy"
  },
  "main": "lib/index.js",
  "repository": {
    "type": "git",
    "url": "git://github.com/actano/yourchoice.git"
  },
  "keywords": [
    "selection",
    "multi",
    "multiselect",
    "range",
    "toggle",
    "shift",
    "iterator",
    "tree"
  ],
  "devDependencies": {
    "babel-cli": "^6.7.7",
    "babel-core": "^6.7.7",
    "babel-eslint": "^6.0.4",
    "babel-loader": "^6.2.4",
    "babel-preset-es2015": "^6.6.0",
    "chai": "^3.2.0",
    "karma": "^0.13.9",
    "karma-chai": "^0.1.0",
    "karma-firefox-launcher": "^1.0.0",
    "karma-mocha": "^1.0.1",
    "karma-sinon-chai": "^1.0.0",
    "karma-spec-reporter": "0.0.26",
    "karma-webpack": "^1.7.0",
    "lolex": "^1.4.0",
    "mocha": "^2.3.2",
    "rimraf": "^2.5.2",
    "sinon": "^1.17.3",
    "sinon-chai": "^2.8.0",
    "snazzy": "^4.0.0",
    "standard": "^7.0.0",
    "webpack": "^1.12.1"
  },
  "dependencies": {
    "component-emitter": "^1.2.0",
    "lodash": "^4.5.1"
  }
}
